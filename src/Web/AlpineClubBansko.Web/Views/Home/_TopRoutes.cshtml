@model List<AlpineClubBansko.Services.Models.RouteViewModels.RouteViewModel>

<div class="list-group">
    @foreach(var route in Model)
    {
    <a asp-controller="Routes" asp-action="Details" asp-route-id="@route.Id" class="list-group-item list-group-item-action  d-flex justify-content-between align-items-center">
        @if (route.Locations != null && route.Locations.Count > 0)
        {
        <p class="p-0 m-0">@route.Locations.OrderBy(l => l.CreatedOn).First().Name <span>-></span>  @route.Locations.OrderBy(l => l.CreatedOn).Last().Name</p>
        }
        <span class="badge badge-pill">
            <i class="fas fa-heart text-danger"></i> @route.Favorite.Count |
            <i class="far fa-eye text-primary"></i> @route.Views |
            <i class="fas fa-comments text-primary"></i> @route.Comments.Count
        </span>
    </a>
    }
</div>