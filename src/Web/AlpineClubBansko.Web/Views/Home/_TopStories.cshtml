@model List<AlpineClubBansko.Services.Models.StoryViewModels.StoryViewModel>

@{
    int counter = 1;
}

<div class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var story in Model)
        {
            <div class="carousel-item @(counter++ == 1 ? "active" : "")">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>@story.Title</h5>
                            <span class="blockquote-footer">
                                Автор: <a asp-controller="Users" asp-action="Profile" asp-route-id="@story.Author.Id">@story.Author</a>, качена на @story.CreatedOn
                            </span>
                        </div>
                        <div class="card-body d-none d-md-block">
                            <p class="card-text text-justify">@Html.Raw(story.Content)</p>
                        </div>
                    </div>
                    <div class="row card-footer py-2">
                        <div class="small text-muted col d-flex justify-content-around">
                            <span><i class="fas fa-book-reader"></i> @story.Views </span><span> <i class="fas fa-comments"></i> @story.Comments.Count </span><span> <i class="fas fa-heart"></i> @story.Favorite.Count</span>
                        </div>
                        <div class="small text-muted col text-right"><a asp-controller="Stories" asp-action="Details" asp-route-id="@story.Id"><i class="fab fa-readme"></i> Прочети</a></div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>