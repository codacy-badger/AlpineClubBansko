@model AlpineClubBansko.Services.Models.StoryViewModels.StoryViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form asp-controller="Stories" asp-action="Edit" method="post">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="blog-post pt-md-3">
                    <h2 class="blog-post-title text-center">Редактиране на история</h2>
                    <br/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" rows="8" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-info">Запиши</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}