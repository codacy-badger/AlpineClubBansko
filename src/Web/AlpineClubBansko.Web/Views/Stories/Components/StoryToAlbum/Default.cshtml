@model AlpineClubBansko.Web.Models.ConnectAlbumAndStoryInputModel
@using AlpineClubBansko.Data.Models

<div class="modal fade" id="storyToAlbum" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Свържи с История</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="container">
                <form asp-controller="Connect" asp-action="ConnectStoryAndAlbum" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="AlbumId" class="col-12 text-center"></label>
                        <select asp-for="AlbumId"
                                asp-items="@(new SelectList((List<Album>)TempData["albumList"],"Id","Title"))" class="form-control">
                            <option>Изберете</option>
                        </select>
                        <span asp-validation-for="AlbumId" class="text-danger"></span>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="StoryId" class="col-12 text-center"></label>
                        <input asp-for="StoryId" value="@Model.StoryId" class="form-control" readonly />
                        <span asp-validation-for="StoryId" class="text-danger"></span>
                    </div>

                    <div class="row justify-content-center">
                        <button class="btn btn-outline-info" type="submit">Свържи</button>
                    </div>
                </form>
                <br />
            </div>
        </div>
    </div>
</div>