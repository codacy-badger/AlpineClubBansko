@model List<AlpineClubBansko.Services.Models.AlbumViewModels.PhotoViewModel>


<div class="container">
    @if (Model != null)
    {

        <div class="col-12">
            @foreach (var photo in Model)
            {
                <div class="row p-1">
                    <div class="col-2">
                        <img src="@photo.ThumbnailUrl" style="width: 100px" />
                    </div>
                    <div class="col-10 flex-column">
                        <div class="row">
                            <div class="col-5">
                                <label asp-for="@photo.Title"></label>
                                <span class="font-italic font-weight-bold" >@photo.Title</span>
                            </div>
                            <div class="col-5">
                                <label asp-for="@photo.Content"></label>
                                <span class="font-italic font-weight-bold">@photo.Content</span>
</div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <label asp-for="@photo.Photographer"></label>
                                <span class="font-italic font-weight-bold">@photo.Photographer</span>
                            </div>

                            <div class="col-4 btn-group btn-group-sm " role="group">
                                <button type="button" class="btn btn-danger" onclick="DeletePhoto('@photo.Id')"><i class="far fa-trash-alt"></i> Изтрии снимката</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <hr />
    <div class="row justify-content-center">
        <nav>
            <ul class="pagination">
                <li class="page-item  @((int)ViewData["page"] == 1 ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="ChangePage('1')">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                </li>
                <li class="page-item @((int)ViewData["page"] == 1 ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="ChangePage('@((int)ViewData["page"] - 1)')">
                        <i class="fas fa-angle-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= (int)ViewData["totalPages"]; i++)
                {
                    <li class="page-item  @((int)ViewData["page"] == i ? "active" : ""))">
                        <a class="page-link" href="#" onclick="ChangePage('@i')">@i</a>
                    </li>
                }
                <li class="page-item @((int)ViewData["page"] == (int)ViewData["totalPages"] ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="ChangePage('@((int)ViewData["page"] + 1)')">
                        <i class="fas fa-angle-right"></i>
                    </a>
                </li>
                <li class="page-item @((int)ViewData["page"] == (int)ViewData["totalPages"] ? "disabled" : "")">
                    <a class="page-link" href="#" onclick="ChangePage('@((int)ViewData["totalPages"])')">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>