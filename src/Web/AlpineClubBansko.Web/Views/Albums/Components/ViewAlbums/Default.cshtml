@model List<AlpineClubBansko.Services.Models.AlbumViewModels.AlbumViewModel>

<div class="col-12">
    <div class="container-fluid">
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var album in Model)
            {
                <div class="col-12">
                    <figure>
                        <div class="media img-thumbnail" style="background-image:url(@album.Cover);"></div>
                        <figcaption class="d-none d-md-inline">
                            <svg viewBox="0 0 200 200" version="1.1" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg">
                                <defs>
                                    <mask id="mask" x="0" y="0" width="100%" height="100%">
                                        <rect id="alpha" x="0" y="0" width="100%" height="100%"></rect>
                                        <text class="title flex-wrap text-capitalize" dx="50%" dy="2.5em">@album.Place</text>
                                    </mask>
                                </defs>
                                <rect id="base" x="0" y="0" width="100%" height="100%"></rect>
                            </svg>
                            <div class="body">
                                <p>@album.Title</p>
                            </div>
                        </figcaption><a asp-controller="Albums" asp-action="Details" asp-route-id="@album.Id"></a>
                    </figure>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-muted font-italic text-center align-middle">Няма намерени албуми</div>
        }
    </div>
    <hr />
    <partial name="_Pagination" />
</div>