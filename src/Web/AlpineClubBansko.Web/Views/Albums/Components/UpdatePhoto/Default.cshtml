@model List<AlpineClubBansko.Services.Models.AlbumViewModels.PhotoViewModel>

@using AlpineClubBansko.Data.Models

@if (Model != null)
{
<div class="container">

    @foreach (var photo in Model)
    {
        <div class="row p-1">
            <div class="col-2">
                <img src="@photo.ThumbnailUrl" style="width: 100px" />
            </div>
            <div class="col-10 flex-column">
                <div class="row">
                    <div class="col-3">
                        @photo.Title
                    </div>
                    <div class="col-3">
                        @photo.Content
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        @photo.Photographer
                    </div>
                    <div class="col-3">
                        @photo.Author.UserName
                    </div>
                    <div class="col-6">
                        @photo.CreatedOn
                    </div>
                </div>
                <div class="row">
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-secondary">Left</button>
                        <a class="btn btn-danger" 
                           asp-controller="Albums" 
                           asp-action="DeletePhoto" 
                           asp-route-photoId="@photo.Id"
                           asp-route-albumId="@photo.Album.Id"
                           data-ajax="true"
                           data-ajax-method="get"
                           data-ajax-update="#gallery"
                            data-ajax-success="Success"
                            data-ajax-failure="Failure"
                           >Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
}

@section Sripts{ 

}
