@model AlpineClubBansko.Services.Models.UserViewModels.UserProfileViewModel

<div class="container d-flex justify-content-center">
    <div class="col-12">
        <div class="row py-3">
            <div class="row col">
                <div class="col-3 d-flex align-items-center">
                    <i class="fas fa-3x fa-user-circle"></i>
                </div>
                <div class="col-9 d-flex flex-column">
                    <label asp-for="UserName" class="font-weight-bold m-0"></label>
                    <text>@Model.UserName</text>
                </div>
            </div>
            <div class="row col">
                <div class="col-3 d-flex align-items-center">
                    <i class="fas fa-3x fa-envelope"></i>
                </div>
                <div class="col-9 d-flex flex-column">
                    <label asp-for="Email" class="font-weight-bold m-0"></label>
                    <text>@Model.Email</text>
                </div>
            </div>
            <div class="row col">
                <div class="col-3 d-flex align-items-center">
                    <i class="fas fa-3x fa-phone-square"></i>
                </div>
                <div class="col-9 d-flex flex-column">
                    <label asp-for="PhoneNumber" class="font-weight-bold m-0"></label>
                    <text>@Model.PhoneNumber</text>
                </div>
            </div>
        </div>
        <hr />
        <div class="row py-3">
            <div class="col">
                <label asp-for="Points" class="font-weight-bold"></label>
                <text>@Model.Points</text>
            </div>

            <div class="col">
                <label asp-for="FirstName" class="font-weight-bold"></label>
                <text>@Model.FirstName</text>
            </div>
            <div class="col">
                <label asp-for="LastName" class="font-weight-bold"></label>
                <text>@Model.LastName</text>
            </div>
        </div>
        <div class="row py-3">
            <div class="form-group col">
                <label asp-for="PostCode" class="font-weight-bold"></label>
                <text>@Model.PostCode</text>
            </div>
            <div class="form-group col">
                <label asp-for="City" class="font-weight-bold"></label>
                <text>@Model.City</text>
            </div>
            <div class="form-group col">
                <label asp-for="Country" class="font-weight-bold"></label>
                <text>@Model.Country</text>
            </div>
        </div>
        <hr />
    </div>
</div>